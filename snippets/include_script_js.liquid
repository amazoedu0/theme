  <script src="{{ 'option_selection.js' | shopify_asset_url }}" defer="defer"></script>
  <script src="{{ 'jquery.elevatezoom.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

<script>
  (function ($) {
     jQuery(document).on('change', '.swatch :radio', function() { 
        var optionIndex = jQuery(this).closest('.swatch').data('option-index');
         var optionValue = jQuery(this).val(); 
    
              jQuery(this)
                  .closest('form')
                  .find('.single-option-selector')
                  .eq(optionIndex)
                  .val(optionValue)
                  .trigger('change');
    });
  })(jQuery); 
</script>



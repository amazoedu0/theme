<div id="pseudo_mobilesticky_block"></div>
<div class="header-mobile d-xl-none py-1 py-xl-0">
	<div class="container">
		<div class="row align-items-center">
			<div class="col col-sm d-flex align-items-center pr-0">
				<div id="megamenu_mobile_toggle" class="menu-toggle mr-1 mr-md-3" title="Menu">
					<span class="svg-icon svg-icon--xl">
						{% render 'icon-menu' %}
					</span>
				</div>
				
				<div class="ml-2 ml-md-3" data-responsive-id="logo-shop" data-responsive-layout="tablet mobile"></div>
			</div>
			<div class="col-auto col-sm-auto d-flex align-items-center justify-content-end header_items_wrapper">
				<div class="ml-2 ml-md-3">
					{% assign  toggle_search = true %}
					{% include "header-search", toggle_search %}
				</div>
				<div class="ml-2 ml-md-3" data-responsive-id="shopping-cart" data-responsive-layout="tablet mobile"></div>
			</div>
		</div>
	</div>

	<div class="menu-content custom-style_content">
	  <div class="megamenu_mobile_close" style="display: none;">
		<div class="close_icon d-inline-flex align-items-center svg-icon svg-icon--md">
		  <span>{{ 'layout.header.close' | t }}</span>
		  {% render 'icon-close' %}
		</div>
	  </div>
	  <div class="menu-content__inner">
		<div class="menu-content__inner__container">
		  <div class="mobile_menu_main">
			{% if ss_item.megamenu_toggle %}
			  <div class="mb-3" data-responsive-id="megamenu" data-responsive-layout="tablet mobile"></div>
			{% else %}
			  <div class="mb-3 mobile-default-menu" data-responsive-id="default-menu" data-responsive-layout="tablet mobile"></div>
			{% endif %}
		  </div>
		  <div class="mobile_menu_footer">
			<div class="menu-items header_items_wrapper">
			  <div class="d-flex align-items-center mt-2">
				<div data-responsive-id="header-account" data-responsive-layout="tablet mobile"></div>
				{% unless customer %}
				  {% if ss_item.view_login == 'type-1' %}
					<span class="link_text">{{ 'layout.header.my_account' | t }}</span>
				  {% endif %}
				{% endunless %}
			  </div>
			  <div class="d-flex align-items-center mt-2">
				<div  data-responsive-id="wishlist" data-responsive-layout="tablet mobile"></div>
				{% if ss_item.view_wishlist == 'type-1' %}
				  <span class="link_text">{{ 'layout.wishlist.wishlist' | t }}</span>
				{% endif %}
			  </div>
			  <a class="d-flex align-items-center mt-2" href="/cart">
				<span class="svg-icon svg-icon--lg">
					{% render 'icon-cart' %}
				</span>
				<span class="link_text">{{ 'layout.header.cart' | t }}</span>
			  </a>
			  {% if ss_item.use_currency_selector %}
				<div class="header_currency" data-responsive-id="currency-selector" data-responsive-layout="tablet mobile"></div>
			  {% endif %}
			  {% if ss_item.social_menu %}
				<div class="mt-3">
				  {% include 'social-icon-link' style: 'type_1' %}
				</div>
			  {% endif %}
			</div>
		  </div>
		</div>
	  </div>
	</div>
</div>




